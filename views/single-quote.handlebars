<h1>Update the quote with an id of {{this.id}}</h1>

<form class="create-update-form" action="/{{this.id}}?_method=PUT" method="POST">

  <div class="form-group">
    <label for="loginEmail">loginEmail:</label>
    <input type="text" id="loginEmail" name="loginEmail" value="{{this.loginEmail}}">
  </div>

  <div class="form-group">
    <label for="loginPassword">loginPassword:</label>
    <textarea id="loginPassword" name="loginPassword" rows="8" cols="40">{{this.loginPassword}}</textarea>
  </div>

  <button type="submit">Update</button>
</form>
